---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("en");

const collection: "blog" | "blogen" = i18next.language === "es" ? "blog" : "blogen";
const posts: any = (await getCollection(collection)).sort((a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5 w-full">
    <div class="flex flex-row">
      <div class="text-5xl font-bold">
        {t("home.name")}
      </div>
    </div>
    <div class="text-3xl py-3 font-bold">
      {t("home.subtitle")}
    </div>
    <div class="py-2">
      <text class="text-lg">
        {t("home.description")}
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://twitter.com/KaderGomezDev" target="_blank">
        {t("home.button")}
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      {t("home.title_projects")}
    </div>
  </div>

  <HorizontalCard
    title="D'McPherson Editorial App"
    subtitle="React Native | Typescript"
    img="/mcpherson.png"
    desc={t("home.project_desc_1")}
    url="https://play.google.com/store/apps/details?id=com.dmcpherson"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="MECS"
    subtitle="C#"
    img="/mecs.png"
    desc={t("home.project_desc_2")}
    url="https://1drv.ms/v/s!AoScFW6xlNY3lsp3dBPQmRJB5eNOzA?e=eC36aR"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Let's Twitt"
    subtitle="React | Typescript | Tailwind CSS | Open Ai | Chrome Extension"
    img="/letstwitt.png"
    desc={t("home.project_desc_3")}
    url="https://github.com/kader1303/Lets-Twitt-Ts"
    badge="NEW"
  />
  <div class="divider my-0"></div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">
      {t("home.from_blog")}
    </div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={ `/${collection}/` + post.slug}
          target="_self"
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
