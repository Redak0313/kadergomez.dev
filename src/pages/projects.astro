---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">{t("home.title_projects")}</div>
  </div>

  <HorizontalCard
    title="D'McPherson Editorial App"
    subtitle="React Native | Typescript"
    img="/mcpherson.png"
    desc={t("home.project_desc_1")}
    url="https://play.google.com/store/apps/details?id=com.dmcpherson"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="MECS"
    subtitle="C#"
    img="/mecs.png"
    desc={t("home.project_desc_2")}
    url="https://1drv.ms/v/s!AoScFW6xlNY3lsp3dBPQmRJB5eNOzA?e=eC36aR"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Let's Twitt"
    subtitle="React | Typescript | Tailwind CSS | Open Ai | Chrome Extension"
    img="/letstwitt.png"
    desc={t("home.project_desc_3")}
    url="https://github.com/kader1303/Lets-Twitt-Ts"
    badge="NEW"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">
      {t("projects.descontinued")}
    </div>
  </div>

  <HorizontalCard
    title="MC-U Tool"
    subtitle="Autoit | Windows"
    img="/mcu.png"
    desc={t("projects.desc_project_1")}
    url="https://github.com/kader1303/mcu-tool-script"
    badge="DEPRECATED"
  />
</BaseLayout>
