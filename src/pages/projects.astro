---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Latest Projects</div>
  </div>

  <HorizontalCard
    title="D'McPherson Editorial App"
    subtitle="React Native | Typescript"
    img="/mcpherson.png"
    desc="Mobile application developed in React Native of the DMcPherson Publishing House where you can see the novelties, popular and most read books of its catalog. Meet the authors and their works, read FREE excerpts of the books enjoy literary newsletters and much more..."
    url="https://play.google.com/store/apps/details?id=com.dmcpherson"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="MECS"
    subtitle="C#"
    img="/mecs.png"
    desc="D'McPherson Editorial Control Software is made in C# and has all the data from autors, editors, and ilustrators from this publishing house, it also control the sales and generates monthly reports to the autors among many other functions required by this entity."
    url="https://1drv.ms/v/s!AoScFW6xlNY3lsp3dBPQmRJB5eNOzA?e=eC36aR"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Let's Twitt"
    subtitle="React | Javascript | Open Ai"
    img="/letstwitt.png"
    desc="Personal learning project consisting of a browser extension made using React to generate tweets and alerts using the Open Ai API."
    url="https://github.com/kader1303/lets-twitt-react"
    badge="NEW"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">No longer mantained</div>
  </div>

  <HorizontalCard
    title="MC-U Tool"
    subtitle="Autoit | Windows"
    img="/mcu.png"
    desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    url="#"
    badge="DEPRECATED"
  />
</BaseLayout>
